<div id="modal-form" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">{{modalFormTitle}}</h4>
      </div>
      <div class="modal-body">
        {{partial partialToRenderInBody}}
      </div>
      <div class="modal-footer">
        {{#if footerHasCancelButton}}
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        {{/if}}
        <button type="button" class="btn btn-primary" {{action 'forwardAction' footerSubmitButtonAction}}>{{footerSubmitButtonTitle}}</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
